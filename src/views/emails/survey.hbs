{{! prettier-ignore }}
<style>
	.container {
		width: 800px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		align-content: center;
	}

	.rating {
		max-width: 350px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		box-sizing: border-box;
	}

	.rating>.value+.value {
		margin-left: 2px;
	}

	.value {
		flex: 0 1 auto;
		padding: 10px;
		background-color: #8257e6;
		color: #FFF;
		border-radius: 8px;
		width: 15px;
		text-align: center;
		text-decoration: none;
	}

	.legend {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 350px;
		margin: 10px;
	}

	.legend span {
		font-weight: 600;
		color: #8257e6;
	}
</style>

<div class="container">
	<label>Olá <strong>{{ name }}</strong>!</label>
	<p>Tudo bem?</p>

	<h3>{{title}}</h3>
	<br />

	<strong>{{description}}</strong>

	<div class="legend">
		<span>Pouco provável</span>
		<span>Muito provável</span>
	</div>

	<div class="rating">
		<a class="value" href="{{ route }}/1?id=${{ id }}">1</a>
		<a class="value" href="{{ route }}/2?id=${{ id }}">2</a>
		<a class="value" href="{{ route }}/3?id=${{ id }}">3</a>
		<a class="value" href="{{ route }}/4?id=${{ id }}">4</a>
		<a class="value" href="{{ route }}/5?id=${{ id }}">5</a>
		<a class="value" href="{{ route }}/6?id=${{ id }}">6</a>
		<a class="value" href="{{ route }}/7?id=${{ id }}">7</a>
		<a class="value" href="{{ route }}/8?id=${{ id }}">8</a>
		<a class="value" href="{{ route }}/9?id=${{ id }}">9</a>
		<a class="value" href="{{ route }}/10?id=${{ id }}">10</a>
	</div>

	<br />
	<br />

	<strong>Sua opinião é muito importante para a nossa empresa!</strong>

	<h3>Equipa | <strong>NLW</strong></h3>
</div>